    <!-- Modal de Login -->
    <div class="overlay" id="overlay"></div>
    <div class="modal" id="modal">
        <h2 id="modalTitulo"></h2>
        <div id="modalConteudo"></div>
        <button onclick="fecharModal()">Fechar</button>
    </div>

    <script>
        function abrirModal(tipo) {
            let modal = document.getElementById("modal");
            let overlay = document.getElementById("overlay");
            let conteudo = document.getElementById("modalConteudo");
            let titulo = document.getElementById("modalTitulo");

            if (tipo === "login") {
                titulo.innerText = "Login";
                conteudo.innerHTML = `
                    <input type="text" id="usuario" placeholder="Nome, Email ou Número" required>
                    <input type="password" id="senha" placeholder="Senha" required minlength="8">
                    <button onclick="login()">Entrar</button>
                    <p>Não tem uma conta? <a href="#" onclick="abrirModal('cadastro')">Cadastre-se</a></p>
                `;
            } else if (tipo === "cadastro") {
                titulo.innerText = "Cadastro";
                conteudo.innerHTML = `
                    <input type="text" id="novoUsuario" placeholder="Nome" required>
                    <input type="email" id="novoEmail" placeholder="Email" required>
                    <input type="text" id="novoNumero" placeholder="(DDD) XXXXX-XXXX" required>
                    <input type="password" id="novaSenha" placeholder="Nova Senha" required>
                    <input type="password" id="confirmarSenha" placeholder="Confirmar Senha" required>
                    <button onclick="cadastrar()">Cadastrar</button>
                    <p>Já tem uma conta? <a href="#" onclick="abrirModal('login')">Faça login</a></p>
                `;
            }

            modal.style.display = "block";
            overlay.style.display = "block";
        }

        function fecharModal() {
            document.getElementById("modal").style.display = "none";
            document.getElementById("overlay").style.display = "none";
        }

        function login() {
            let usuario = document.getElementById("usuario").value;
            let senha = document.getElementById("senha").value;

            if (usuario && senha.length >= 8) {
                alert("Login realizado com sucesso!");
                fecharModal();
            } else {
                alert("Usuário ou senha incorretos! A senha deve ter pelo menos 8 caracteres.");
            }
        }

        function cadastrar() {
            let usuario = document.getElementById("novoUsuario").value;
            let email = document.getElementById("novoEmail").value;
            let numero = document.getElementById("novoNumero").value;
            let senha = document.getElementById("novaSenha").value;
            let confirmarSenha = document.getElementById("confirmarSenha").value;

            if (senha !== confirmarSenha) {
                alert("As senhas não coincidem!");
                return;
            }

            if (usuario && email && numero && senha.length >= 8) {
                alert("Cadastro realizado com sucesso!");
                fecharModal();
            } else {
                alert("Preencha todos os campos corretamente!");
            }
        }
    </script>

